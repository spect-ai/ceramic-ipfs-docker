{
  "anchor": {
    "ethereum-rpc-url": "https://gnosischain-rpc.gateway.pokt.network/"
  },
  "http-api": {
    "cors-allowed-origins": [".*"]
  },
  "ipfs": {
    "mode": "remote",
    "host": "http://ipfs:5001"
  },
  "logger": {
    "log-level": 2,
    "log-to-files": false
  },
  "metrics": {
    "metrics-exporter-enabled": false,
    "metrics-port": 9090
  },
  "network": {
    "name": "testnet-clay"
  },
  "node": {},
  "state-store": {
    "mode": "fs",
    "local-directory": "/root/.ceramic/statestore/"
  },
  "indexing": {
    "db": "sqlite:///root/.ceramic/indexing.sqlite",
    "allow-queries-before-historical-sync": true,
    "models": []
  }
}
